setConfDir() {
    __ret=1;
    if test -z "${OM_DRIVER_CONF_DIR}"; then
        # we could be on the dev-source tree.
        __devTop="${OMNI_SOURCE_DIR}"
        if test ! -z "${__devTop}" -a -d "${__devTop}"; then
            OM_DRIVER_CONF_DIR="${__devTop}/Driver/etc"
            isValidConfDir "${OM_DRIVER_CONF_DIR}"
            __ret=$?
            if test ${__ret} -eq 0; then
                isInDevTree=1
            fi
        else
            OM_DRIVER_CONF_DIR="${OMNI_HOME}/etc"
            isValidConfDir "${OM_DRIVER_CONF_DIR}"
            __ret=$?
        fi
        unset __devTop
    fi
    return ${__ret}
}


validateConfDir() {
    __ret=1
    if test -z "${OM_DRIVER_CONF_DIR}"; then
        setConfDir
        __ret=$?
    else
        isValidConfDir "${OM_DRIVER_CONF_DIR}"
        __ret=$?
        if test ${__ret} -ne 0; then
            OM_DRIVER_CONF_DIR=''
            setConfDir
            __ret=$?
        fi
    fi
    return ${__ret}
}


#


omniSetup() {
    validateOmniHome
    if test $? -ne 0; then
        error "can't find a valid OMNI_HOME."
        return 1
    fi

    validateConfDir
    if test $? -ne 0; then
        error "can't find a valid OM_DRIVER_CONF_DIR."
        return 1
    fi

    javaConf="${OM_DRIVER_CONF_DIR}/java.conf"
    if test -r "${javaConf}"; then
        . "${javaConf}"
    fi
    if test -z "${OMNI_JAVA}"; then
        OMNI_JAVA="java"
    fi


    if test $# -gt 0; then
        classPath=`genClassPath $@`
        if test $? -ne 0; then
            error "can't create a valid CLASSPATH."
            return 1
        fi
        if test -z "${classPath}"; then
            error "can't create a valid CLASSPATH."
            return 1
        fi
        if test ! -z "${CLASSPATH}"; then
            CLASSPATH="${CLASSPATH}:${classPath}"
        else
            CLASSPATH="${classPath}"
        fi
        export CLASSPATH
        unset classPath
    fi

    if test ${isInDevTree} -eq 1; then
        _C_Front="${OMNI_SOURCE_DIR}/C-FrontEnd/src/C_Front"
        _F_Front="${OMNI_SOURCE_DIR}/F-FrontEnd/src/F_Front"
        _omtranslate="sh ${OMNI_SOURCE_DIR}/Driver/bin/omtranslate"
        _C_Trans="sh ${OMNI_SOURCE_DIR}/C-BackEnd/bin/C_Trans"
        _F_Trans="sh ${OMNI_SOURCE_DIR}/F-BackEnd/bin/F_Trans"
        _C_Decomp="sh ${OMNI_SOURCE_DIR}/C-BackEnd/bin/C_Decomp"
        _F_Decomp="sh ${OMNI_SOURCE_DIR}/F-BackEnd/bin/F_Decomp"
    else
        _C_Front="${OMNI_HOME}/bin/src/C_Front"
        _F_Front="${OMNI_HOME}/bin/F_Front"
        _omtranslate="${OMNI_HOME}/bin/omtranslate"
        _C_Trans="${OMNI_HOME}/bin/C_Trans"
        _F_Trans="${OMNI_HOME}/bin/F_Trans"
        _C_Decomp="${OMNI_HOME}/bin/C_Decomp"
        _F_Decomp="${OMNI_HOME}/bin/F_Decomp"
    fi
    unset isInDevTree
    return 0
}


hasOption() {
    __ret=0
    if test $# -eq 1 -a ! -z "${1}"; then
        echo $@ | egrep "${1}[[:space:]]+" > /dev/null 2>&1
        if test $? -eq 0; then
            __ret=1
        fi
    fi
    return ${__ret}
}
