defOmniHome="@OMNI_HOME@"
OM_DRIVER_CONF_DIR="@OM_DRIVER_CONF_DIR@"

me=`echo "${0}" | awk -F'/' '{ print $NF }'`


#


stderr() {
    echo ${1+"$@"} 1>&2
}


warning() {
    stderr ${me}: warning: ${1+"$@"}
}


error() {
    stderr ${me}: error: ${1+"$@"}
}


#


isInDevTree=0


genClassPath() {
    __ret=1
    __cp=''
    if test ! -z "${OMNI_HOME}"; then
        __jarDir="${OMNI_HOME}/share/xcalablemp"
        for __i in $@; do
            if test -r "${__jarDir}/${__i}"; then
                __cp="${__cp}:${__jarDir}/${__i}"
            else
                __cp=''
                break
            fi
        done
        unset __i __jarDir
        if test -z "${__cp}"; then
            __cp=`find "${OMNI_HOME}" -type d -name 'classes' | \
                awk '{ printf ":%s", $NF }'`
            if test -z "${__cp}"; then
                error "can't find any classes."
            fi
        fi
    fi
    if test ! -z "${__cp}"; then
        echo ${__cp} | sed 's/^://'
        __ret=0
    fi
    unset __cp
    return ${__ret}
}


isValidOmniHome() {
    __ret=1
    if test $# -eq 1 -a ! -z "${1}"; then
        if test -d "${1}" -a \
            -x "${1}/bin/C_Front" -a \
            -x "${1}/bin/C_Front"; then
            __ret=0
        else
            if test -d "${1}" -a \
                -x "${1}/C-FrontEnd/src/C_Front" -a \
                -x "${1}/F-FrontEnd/src/F_Front"; then
                __ret=0
            fi
        fi
    fi
    return ${__ret}
}


setOmniHome() {
    __ret=1
    if test -z "${OMNI_HOME}"; then
        # we could be on the dev-source tree.
        __devTop="${OMNI_SOURCE_DIR}"
        if test ! -z "${__devTop}" -a -d "${__devTop}"; then
            OMNI_HOME="${__devTop}"
            isValidOmniHome "${OMNI_HOME}"
            __ret=$?
            if test ${__ret} -eq 0; then
                isInDevTree=1
            fi
        else
            OMNI_HOME="${defOmniHome}"
            isValidOmniHome "${OMNI_HOME}"
            __ret=$?
        fi
        unset __devTop
    fi
    return ${__ret}
}


validateOmniHome() {
    __ret=1
    if test -z "${OMNI_HOME}"; then
        setOmniHome
        __ret=$?
    else
        isValidOmniHome "${OMNI_HOME}"
        __ret=$?
        if test ${__ret} -ne 0; then
            OMNI_HOME=''
            setOmniHome
            __ret=$?
        fi
    fi
    return ${__ret}
}


