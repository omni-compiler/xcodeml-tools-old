.PHONY: all clean install

JAVAC     = @JAVAC@
JAVAC_OPT = @JAVAC_OPT@
JAR       = @JAR@
JAVADIR   = @OMNI_HOME@/share/xcalablemp
MKDIR_P   = @MKDIR_P@
INSTALL   = @INSTALL@
OM_COMMON = build/om-common.jar
SOURCE    = $(wildcard src/xcodeml/*.java src/xcodeml/*/*.java)

all: $(OM_COMMON)
$(OM_COMMON): $(SOURCE)
	$(JAVAC) $(JAVAC_OPT) src/xcodeml/*.java src/xcodeml/*/*.java -classpath ./src
	$(MKDIR_P) build
	cd src;	$(JAR) cf ../$@ ./xcodeml/*.class ./xcodeml/*/*.class

clean:
	rm -f $(OM_COMMON) src/xcodeml/*.class src/xcodeml/*/*.class

install: $(OM_COMMON)
	$(MKDIR_P) $(JAVADIR)
	$(INSTALL) $^ $(JAVADIR)
